---
/**
 * * Pricing cards with three cards
 */

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";

interface pricingItem {
	name: string; // plan name
	featured?: boolean; // if true, will be highlighted or otherwise featured
	price: number;
	features: string[]; // list of features
	image: ImageMetadata; // imported image
}

import image1 from "@assets/images/couple-6-crop.jpg";
import image2 from "@assets/images/couple-5-min.jpg";
import image3 from "@assets/images/couple-1-square.jpg";
import image4 from "@assets/images/couple-1-square.jpg";
import image5 from "@assets/images/turismoMv01.png";
import image6 from "@assets/images/herramientasD.jpeg";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
	{
		name: "Prestamos y Ahorros",
		featured: false,
		price: 0,
		features: [
			"200+ prestamos realizados",
			"Prestamos internos entre socios",
			"*Prestamos según la evaluación con el analista",
			"*Pestamos con un interes al 2%",
		],
		image: image1,
	},
	{
		name: "Manejo Integral de Ganado Lechero",
		featured: true,
		price: 39.90,
		features: [
			"200+ cabezas de ganado ",
			"Manejo y ciudad de ganado lecher en todas su categorias",
			"*Cursos de ganado lechero",
			"*Curso de mejamiento genético",
		],
		image: image2,
	},
	{
		name: "Tubérculos Autóctonos Andinos",
		featured: false,
		price: 1.90,
		features: [
			"Variedad de tuberculos Adinos",
			"variedas de granos de la asociación",
			"Venta al por mayor y menos den papas, ocas, ollucos ",
			"*Venta de granos al por mayor y meno trigo, chochos, abas entre otros",
		],
		image: image3,
	},
	{
		name: "Textiles y Tejidos",
		featured: false,
		price: 19.9,
		features: [
			"+20 Actividades realizadas",
			"Venta de ponchos de lana de oveja",
			"Venta de fondos de lana de oveja",
			"Venta de faldas mandiles entre otros",
		],
		image: image4,
	},
	{
		name: "Turismo Rural Comunitario",
		featured: false,
		price: 49.90,
		features: [
			"+ 10 Actividades que se realizan en la asociación",
			" Cuaresmas ",
			" limpia de asequia",
			" cuidado, atención y ordeño en ganado",
			" Actividades Evangelicas en la Iglecia de la localidad",
		],
		image: image5,
	},
	{
		name: "Manejor de herramientas Digitales",
		featured: false,
		price: 29.90,
		features: [
			"Brindamos sistema para UNICAS y capacitacion",
			" Manejo de redes sociales",
			"*Proceso  para reuniones virtuales",
			" Manejo de herramientas en ofimatica",
			
		],
		image: image6,
	},
	{
		name: "fff",
		featured: false,
		price: 29.90,
		features: [
			"Brindamos sistema para UNICAS y capacitacion",
			" Manejo de redes sociales",
			"*Proceso  para reuniones virtuales",
			" Manejo de herramientas en ofimatica",
			
		],
		image: image6,
	},
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">SERVICIOS</h2>
	</div>

	<!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
	<div
		class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
	>
		{
			pricingData.map((plan) => (
				<div
					class="flex w-full flex-col"
					class:list={[
						{
							"bg-primary-200": plan.featured === true,
						},
					]}
				>
					<div>
						<div class="aspect-[3/4] h-auto w-full overflow-hidden">
							<Image
								src={plan.image}
								alt={plan.name}
								width={450}
								densities={[1.5, 2]}
								class="h-full w-full object-cover"
							/>
						</div>
					</div>
					<div class="border-primary-200 flex h-full flex-col justify-between border-2 border-t-0 pt-10 pb-10">
						<div>
							<h3 class="h2 text-center">{plan.name}</h3>

							<ul class="mt-4 flex flex-col gap-3 px-8">
								{plan.features.map((feature) => (
									<li class="leading-snug lg:text-lg lg:leading-snug">{feature}</li>
								))}
							</ul>
						</div>
						<p class="font-decorative text-base-800 mt-6 flex justify-center text-center text-[5rem] leading-none">
							${plan.price}
							<span class="flex h-full text-[3.5rem]">+</span>
						</p>
					</div>
				</div>
			))
		}
	</div>

	<div class="mt-12 flex justify-center">
		<Button href="/#contact" variant="outline" class="px-8">Contactanos</Button>
	</div>
</section>
